@model IEnumerable<FourthSource.Staffing.Data.Request>

@{
    ViewBag.Title = "Index";
    var i = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Search", "Requests"))
    {
        <div class="form-group has-feedback">
            <input type="text" name="SearchText" placeholder="Buscar Request" class="form-control" />
        </div>
    }
</p>

<div class="container" id="main">
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-6">
            <div class="panel panel-default btn-default">
                <div class="panel panel-heading">
                    <h4>
                        <img src="@Url.Action("GetLogo", "Companies", new { item.Company.Id })" alt="Logo" class="img-thumbnail" style="max-height:60px;" />
                        @Html.DisplayFor(modelItem => item.RequestNumber)
                        @Html.ActionLink("Details", "Details", "Requests", new { id = item.Id }, new { @class = "pull-right" })
                    </h4>
                </div>
                <div class="panel panel-body">
                    <ul>
                        @Html.DisplayFor(modelItem => item.RequestType)
                    </ul>
                    <ul>
                        @Html.DisplayFor(modelItem => item.DateNeeded)
                    </ul>
                    <ul>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </ul>
                    <ul>
                        @Html.DisplayFor(modelItem => item.PositionType)
                    </ul>
                </div>
            </div>
        </div>
    }
}
</div>